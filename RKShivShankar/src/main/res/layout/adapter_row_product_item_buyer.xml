<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_whole"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:layout_margin="0.2dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:adjustViewBounds="true"
        android:minHeight="180dp" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/black_transparent_light"
        android:ellipsize="marquee"
        android:gravity="center"
        android:lines="1"
        android:padding="5dp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/tv_white"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="8dp"
        android:background="@drawable/xml_round_white"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="5dp"
        android:background="@drawable/ic_information"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small"
        android:visibility="visible" />


    <RelativeLayout
        android:id="@+id/rv_checked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent_light"
        android:visibility="gone">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_checked" />
    </RelativeLayout>

</FrameLayout>