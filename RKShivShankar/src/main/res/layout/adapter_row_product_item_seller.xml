<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="1dp"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:ellipsize="marquee"
        android:gravity="center"
        android:lines="1"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/multiple_actions_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right|center_vertical"
        android:layout_marginBottom="5dp"
        fab:menu_labels_style="@style/MenuLabelsStyle"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="-10dp"
        fab:menu_colorNormal="@color/colorPrimary"
        fab:menu_colorPressed="@color/colorPrimaryDark"
        fab:menu_colorRipple="@color/white"
        fab:menu_fab_size="mini"
        fab:menu_icon="@drawable/ic_more"
        fab:menu_openDirection="down"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="2dp">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fb_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:tint="@color/colorPrimary"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_size="mini"
            fab:menu_shadowRadius="0dp" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fb_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_eye_black"
            android:tint="@color/colorPrimary"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_size="mini"
            fab:menu_shadowRadius="0dp" />


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fb_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:tint="@color/colorPrimary"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_size="mini"
            fab:menu_shadowRadius="0dp" />

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>