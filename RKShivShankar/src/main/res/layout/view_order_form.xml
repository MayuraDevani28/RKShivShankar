<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/gray_bg_transparent"
    android:visibility="visible"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cart1"
            android:gravity="center_vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_margin="2dp"
                android:background="@drawable/xml_round_green"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_xsmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="2dp"
                android:text="Order Review"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_xsmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/cart1_1"
            android:gravity="center_vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_margin="2dp"
                android:background="@drawable/xml_round_green"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_xsmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="2dp"
                android:text="Order Form"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_xsmall" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_margin="2dp"
                android:background="@drawable/xml_round_green"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_xsmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="Confirm Order"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_xsmall" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:requiresFadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_order_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="left|center_vertical"
                        android:lines="1"
                        android:text="Subtotal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/tv_subtotal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shipping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="left|center_vertical"
                        android:lines="1"
                        android:text="Shipping"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />


                    <TextView
                        android:id="@+id/tv_shipping"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_transparent_light"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="left|center_vertical"
                        android:lines="1"
                        android:text="Grand Total"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/tv_grand_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:ellipsize="marquee"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_confirm_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="CONFIRM ORDER"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:gravity="center_vertical"
                        android:rotation="270"
                        android:src="@drawable/ic_down_arrow_inround" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_shipping_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Add New Address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/xml_black_white_square_box"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt_first_name_shipping"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="3dp"
                                    android:layout_weight="1"

                                    android:hint="Enter First Name"
                                    android:imeOptions="actionNext"
                                    android:inputType="textCapWords"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textSize="@dimen/text_size_medium" />

                                <EditText
                                    android:id="@+id/edt_last_name_shipping"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:hint="Enter Last Name"
                                    android:imeOptions="actionNext"
                                    android:inputType="textCapWords"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textSize="@dimen/text_size_medium" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/edt_email_shipping"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:hint="Enter Email Address"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textSize="@dimen/text_size_medium" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt_phone_shipping"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="3dp"
                                    android:layout_weight="1"
                                    android:hint="Enter Phone"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone"
                                    android:maxLength="10"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textSize="@dimen/text_size_medium" />

                                <EditText
                                    android:id="@+id/edt_mobile_shipping"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:hint="Enter Mobile"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone"
                                    android:maxLength="10"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textSize="@dimen/text_size_medium" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/edt_address1_shipping"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:hint="Enter Address Line1"
                                android:imeOptions="actionNext"
                                android:inputType="textCapSentences"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textSize="@dimen/text_size_medium" />

                            <EditText
                                android:id="@+id/edt_address2_shipping"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:hint="Enter Address Line2"
                                android:imeOptions="actionNext"
                                android:inputType="textCapSentences"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textSize="@dimen/text_size_medium" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt_address_city_shipping"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="3dp"
                                    android:layout_weight="1"
                                    android:hint="Enter City"
                                    android:imeOptions="actionNext"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textSize="@dimen/text_size_medium" />

                                <EditText
                                    android:id="@+id/edt_address_state_shipping"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:hint="Enter State"
                                    android:imeOptions="actionNext"
                                    android:inputType="textCapWords"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textSize="@dimen/text_size_medium" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/sp_country_shipping"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="3dp"
                                    android:layout_weight="1"
                                    android:hint="Enter Country"
                                    android:padding="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_medium" />

                                <EditText
                                    android:id="@+id/edt_pin_code_shipping"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="1"
                                    android:hint="Enter Pin Code"
                                    android:imeOptions="actionDone"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textSize="@dimen/text_size_medium" />
                            </LinearLayout>

                            <CheckBox
                                android:id="@+id/cb_same_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3dp"
                                android:layout_marginTop="3dp"
                                android:button="@drawable/abc_btn_check_material"
                                android:gravity="left|center_vertical"
                                android:paddingRight="5dp"
                                android:text="Different Billing Address?"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_medium" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="14dp"
                                android:padding="5dp"
                                android:text="Enter your shipping address, then check this box to enter a different billing address."
                                android:textSize="@dimen/text_size_medium" />

                            <Button
                                android:id="@+id/btn_continue_shipping"
                                style="@style/ButtonStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SAVE &amp; CONTINUE"
                                android:textColor="@color/white_text_selector" />

                            <View
                                android:id="@+id/view_shipping_bottom"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@color/transparent"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_billing_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:text="Billing Information"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <ImageView
                        android:id="@+id/iv_billing_plus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="7dp"
                        android:visibility="gone" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_billing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/xml_black_white_square_box"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt_first_name_billing"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="3dp"
                                    android:layout_weight="1"
                                    android:hint="Enter First Name"
                                    android:imeOptions="actionNext"
                                    android:inputType="textCapWords"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textSize="@dimen/text_size_medium" />

                                <EditText
                                    android:id="@+id/edt_last_name_billing"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:hint="Enter Last Name"
                                    android:imeOptions="actionNext"
                                    android:inputType="textCapWords"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textSize="@dimen/text_size_medium" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/edt_email_billing"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:hint="Enter Email Address"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textSize="@dimen/text_size_medium" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt_phone_billing"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="3dp"
                                    android:layout_weight="1"
                                    android:hint="Enter Phone"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone"
                                    android:maxLength="10"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textSize="@dimen/text_size_medium" />

                                <EditText
                                    android:id="@+id/edt_mobile_billing"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:hint="Enter Mobile"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone"
                                    android:maxLength="10"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textSize="@dimen/text_size_medium" />
                            </LinearLayout>

                            <EditText
                                android:id="@+id/edt_address1_billing"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:hint="Enter Address Line1"
                                android:imeOptions="actionNext"
                                android:inputType="textCapSentences"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textSize="@dimen/text_size_medium" />

                            <EditText
                                android:id="@+id/edt_address2_billing"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:hint="Enter Address Line2"
                                android:imeOptions="actionNext"
                                android:inputType="textCapSentences"
                                android:maxLines="1"
                                android:padding="10dp"
                                android:textSize="@dimen/text_size_medium" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt_address_city_billing"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="3dp"
                                    android:layout_weight="1"
                                    android:hint="Enter City"
                                    android:imeOptions="actionNext"
                                    android:inputType="textCapWords"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textSize="@dimen/text_size_medium" />

                                <EditText
                                    android:id="@+id/edt_address_state_billing"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:hint="Enter State"
                                    android:imeOptions="actionNext"
                                    android:inputType="textCapWords"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textSize="@dimen/text_size_medium" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/sp_country_billing"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="3dp"
                                    android:layout_weight="1"
                                    android:hint="Enter Country"
                                    android:padding="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_medium" />

                                <EditText
                                    android:id="@+id/edt_pin_code_billing"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="1"
                                    android:hint="Enter Pin Code"
                                    android:imeOptions="actionDone"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:textSize="@dimen/text_size_medium" />
                            </LinearLayout>


                            <Button
                                android:id="@+id/btn_continue_billing"
                                style="@style/ButtonStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SAVE &amp; CONTINUE"
                                android:textColor="@color/white_text_selector" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:background="@color/transparent" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="180dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>