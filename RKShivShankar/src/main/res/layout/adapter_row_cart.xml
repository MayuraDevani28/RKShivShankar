<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_whole"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:minHeight="80dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tv_product_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small" />

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_delete"
                    android:tint="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_suit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:ellipsize="marquee"
                        android:gravity="left|center_vertical"
                        android:lines="1"
                        android:text="Qty"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.8"
                        android:orientation="horizontal">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/ti_username"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            app:hintEnabled="false"
                            android:layout_weight="0.4"
                            android:textColorHint="@color/gray">

                            <EditText
                                android:id="@+id/tv_qty"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:inputType="number"
                                android:maxLength="10"
                                android:imeOptions="actionNext"
                                android:lines="1"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small" />

                        </android.support.design.widget.TextInputLayout>
                       <!-- <EditText
                            android:id="@+id/tv_qty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/xml_black_border_square_box"
                            android:gravity="left|center_vertical"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="10"
                            android:padding="3dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_small" />
-->
                        <TextView
                            android:id="@+id/btn_update"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Update"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/xml_green_border_box"
                            android:visibility="invisible" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:ellipsize="marquee"
                        android:gravity="left|center_vertical"
                        android:lines="1"
                        android:text="Price"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:ellipsize="marquee"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:ellipsize="marquee"
                        android:gravity="left|center_vertical"
                        android:lines="1"
                        android:text="Total"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text=" :"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:ellipsize="marquee"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fabric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/xml_black_border_square_box"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/sp_body"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <RadioButton
                        android:id="@+id/radioFront"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/home_cat_selector_bg"
                        android:button="@null"
                        android:drawableLeft="@drawable/home_cat_selector"
                        android:drawablePadding="10dp"
                        android:gravity="left|center_vertical"
                        android:padding="5dp"
                        android:text="Front"
                        android:textColor="@color/rb_text_selector"
                        android:textSize="@dimen/text_size_small" />

                    <RadioButton
                        android:id="@+id/radioBack"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/home_cat_selector_bg"
                        android:button="@null"
                        android:drawableLeft="@drawable/home_cat_selector"
                        android:drawablePadding="10dp"
                        android:gravity="left|center_vertical"
                        android:padding="5dp"
                        android:text="Back"
                        android:textColor="@color/rb_text_selector"
                        android:textSize="@dimen/text_size_small" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <RadioButton
                        android:id="@+id/radioBaju"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/home_cat_selector_bg"
                        android:button="@null"
                        android:drawableLeft="@drawable/home_cat_selector"
                        android:drawablePadding="10dp"
                        android:gravity="left|center_vertical"
                        android:padding="5dp"
                        android:text="Baju"
                        android:textColor="@color/rb_text_selector"
                        android:textSize="@dimen/text_size_small" />

                    <RadioButton
                        android:id="@+id/radioExtra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/home_cat_selector_bg"
                        android:button="@null"
                        android:drawableLeft="@drawable/home_cat_selector"
                        android:drawablePadding="10dp"
                        android:gravity="left|center_vertical"
                        android:padding="5dp"
                        android:text="Extra"
                        android:textColor="@color/rb_text_selector"
                        android:textSize="@dimen/text_size_small" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/ll_front"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.4"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:ellipsize="marquee"
                            android:gravity="left|center_vertical"
                            android:lines="1"
                            android:text="Qty/Pcs"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_small" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="4dp"
                            android:ellipsize="marquee"
                            android:gravity="left|center_vertical"
                            android:lines="1"
                            android:text="Cut/Mtrs"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/tv_qty_fabric"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/xml_black_border_square_box"
                                android:gravity="left|center_vertical"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="10"
                                android:padding="3dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small" />


                            <EditText
                                android:id="@+id/tv_cut_fabric"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/xml_black_border_square_box"
                                android:gravity="left|center_vertical"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:maxLength="6"
                                android:padding="3dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small" />

                            <EditText
                                android:id="@+id/tv_qty_fabric_back"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/xml_black_border_square_box"
                                android:gravity="left|center_vertical"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="10"
                                android:padding="3dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small"
                                android:visibility="gone" />


                            <EditText
                                android:id="@+id/tv_cut_fabric_back"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/xml_black_border_square_box"
                                android:gravity="left|center_vertical"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:maxLength="6"
                                android:padding="3dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/tv_qty_fabric_baju"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/xml_black_border_square_box"
                                android:gravity="left|center_vertical"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="10"
                                android:padding="3dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small"
                                android:visibility="gone" />


                            <EditText
                                android:id="@+id/tv_cut_fabric_baju"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/xml_black_border_square_box"
                                android:gravity="left|center_vertical"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:maxLength="6"
                                android:padding="3dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/tv_qty_fabric_extra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/xml_black_border_square_box"
                                android:gravity="left|center_vertical"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="10"
                                android:padding="3dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small"
                                android:visibility="gone" />


                            <EditText
                                android:id="@+id/tv_cut_fabric_extra"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/xml_black_border_square_box"
                                android:gravity="left|center_vertical"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:maxLength="6"
                                android:padding="3dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_small"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/btn_update_fabric"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:layout_marginLeft="3dp"
                            android:text="Update"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/xml_green_border_box"
                            android:visibility="invisible" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="0.3" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" />

    <LinearLayout
        android:id="@+id/ll_qty_cut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:text="Total Qty"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_total_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="right|center_vertical"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/gray_bg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:text="Price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_price_fabric"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="right|center_vertical"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:text="Total Cut"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_total_cut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="right|center_vertical"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/gray_bg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="left|center_vertical"
                    android:lines="1"
                    android:text="Sub Total"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_total_fabric"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="right|center_vertical"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>