<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_brand"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#3AB4C3"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/fl"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/xml_round_white"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_brand_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/splashscreen_logo" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Women's"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_edit_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_change_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/xml_round_yellow"
            android:src="@drawable/ic_edit"
            android:tint="@color/blue"
            android:visibility="visible" />

        <View
            android:id="@+id/separator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/gray_transparent" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/xml_round_yellow"
            android:padding="5dp"
            android:src="@drawable/ic_close"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>
