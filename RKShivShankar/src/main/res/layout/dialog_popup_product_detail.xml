<?xml version="1.0" encoding="utf-8"?>

<com.liuguangqiang.swipeback.SwipeBackLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/xml_popup_square_box">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/image_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:adjustViewBounds="true"
                    android:minHeight="280dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textColorHint="@color/text_color_hint">

                        <EditText
                            android:id="@+id/tv_product_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="Product Code"
                            android:inputType="textCapWords"
                            android:text=""
                            android:textSize="@dimen/text_size_small"
                            app:backgroundTint="@android:color/white" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textColorHint="@color/text_color_hint">

                        <EditText
                            android:id="@+id/tv_brand_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="Brand Name"
                            android:inputType="textCapWords"
                            android:text=""
                            android:textSize="@dimen/text_size_small"
                            app:backgroundTint="@android:color/white" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textColorHint="@color/text_color_hint">

                        <EditText
                            android:id="@+id/tv_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="Category"
                            android:inputType="textCapWords"
                            android:text=""
                            android:textSize="@dimen/text_size_small"
                            app:backgroundTint="@android:color/white" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textColorHint="@color/text_color_hint">

                        <EditText
                            android:id="@+id/tv_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="Type"
                            android:inputType="textCapWords"
                            android:text=""
                            android:textSize="@dimen/text_size_small"
                            app:backgroundTint="@android:color/white" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textColorHint="@color/text_color_hint">

                        <EditText
                            android:id="@+id/tv_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="Price"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:text=""
                            android:textSize="@dimen/text_size_small"
                            app:backgroundTint="@android:color/white" />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textColorHint="@color/text_color_hint">

                        <EditText
                            android:id="@+id/tv_min_qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:editable="false"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="Min Parcel Size"
                            android:imeOptions="actionGo"
                            android:inputType="number"
                            android:text=""
                            android:textSize="@dimen/text_size_small"
                            app:backgroundTint="@android:color/white" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fabric"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_bg_transparent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Fabric Details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <LinearLayout
                        android:id="@+id/ll_top_bottom_fab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:textColorHint="@color/text_color_hint">

                            <EditText
                                android:id="@+id/tv_top_fabrics"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:enabled="false"
                                android:focusable="false"
                                android:hint="Top Fabrics"
                                android:inputType="textCapWords"
                                android:text=""
                                android:textSize="@dimen/text_size_small"
                                app:backgroundTint="@android:color/white" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:textColorHint="@color/text_color_hint">

                            <EditText
                                android:id="@+id/tv_bottom_fabrics"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:enabled="false"
                                android:focusable="false"
                                android:hint="Bottom Fabrics"
                                android:inputType="textCapWords"
                                android:text=""
                                android:textSize="@dimen/text_size_small"
                                app:backgroundTint="@android:color/white" />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp">

                        <android.support.design.widget.TextInputLayout

                            android:id="@+id/edt_dupatta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:textColorHint="@color/text_color_hint">

                            <EditText
                                android:id="@+id/tv_dupatta"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:enabled="false"
                                android:focusable="false"
                                android:hint="Dupatta"
                                android:inputType="textCapWords"
                                android:text=""
                                android:textSize="@dimen/text_size_small"
                                app:backgroundTint="@android:color/white" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/edt_all_fabrics"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:textColorHint="@color/text_color_hint">

                            <EditText
                                android:id="@+id/tv_all_fabrics"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:enabled="false"
                                android:focusable="false"
                                android:hint="All Fabrics"
                                android:inputType="textCapWords"
                                android:textSize="@dimen/text_size_small"
                                app:backgroundTint="@android:color/white" />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/rl_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">

            <com.liuguangqiang.progressbar.CircleProgressBar
                android:id="@+id/progressbar1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:background_color="@android:color/transparent"
                app:progress_color="@color/colorPrimary"
                app:stroke_width="2dp" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_error" />

        </RelativeLayout>

    </RelativeLayout>
</com.liuguangqiang.swipeback.SwipeBackLayout>